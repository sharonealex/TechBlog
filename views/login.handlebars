<link rel="stylesheet" href="./css/login.css">
<section class="form-container">

   

    <fieldset id="login-form">
        <form>
             <section >
                     <h1 style="color: white;  text-align: center;">Login</h1>
                </section>
            <section class="form-group">
                <input class="form-input" type="text" id="username" placeholder="Username" maxlength="50" autocomplete="off">
            </section>
             <section class="form-group">
                    <input class="form-input" type="password" id="password" placeholder="Password" maxlength="15">
                </section>
                 <div class="submitBtnDiv">
                    <input class="submitBtn" id="login-btn" type="submit" id="login" value="Sign In">
                </div>
        </form>
    </fieldset>
    <a href="/signup">
    <p>Dont have an account yet? Sign Up here</p></a>
</section>

<script src="/js/login.js"></script>